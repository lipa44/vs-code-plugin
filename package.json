{
  "name": "binobjsshredder",
  "displayName": "Bin/Obj shredder",
  "description": "Simple extension for deleting bin/obj folders",
  "version": "1.0.2",
  "license": "MIT",
  "icon": "logo.svg",
  "repository": {
    "url": "https://github.com/lipa44/vs-code-plugin"
  },
  "publisher": "lipa44",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:buildFolders"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "buildFolders",
        "contents": "No bin/obj folders found. Try to use better language (for example, C#)"
      }
    ],
    "commands": [
      {
        "command": "buildFolders.deleteEntry",
        "title": "Delete"
      },
      {
        "command": "buildFolders.refreshEntry",
        "title": "Refresh"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "buildFolders",
          "name": "bin/obj folders"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "buildFolders.refreshEntry",
          "when": "view == buildFolders",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "buildFolders.deleteEntry",
          "when": "view == buildFolders"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.73.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
